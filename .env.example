# TikTok Viral Monitor Environment Variables
# Copy this file to .env and fill in your values

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# SadCaptcha API
SADCAPTCHA_API_KEY=your_sadcaptcha_api_key_here

# Database Configuration (if using PostgreSQL)
DB_PASSWORD=your_secure_database_password

# Optional: Proxy Configuration
PROXY_HOST=your_proxy_host
PROXY_PORT=your_proxy_port
PROXY_USERNAME=your_proxy_username
PROXY_PASSWORD=your_proxy_password

# Optional: Monitoring Configuration
MONITORING_INTERVAL=5400  # 90 minutes in seconds
VIRAL_THRESHOLD=1000      # 1000 view increase threshold
MAX_CONCURRENT_SCRAPES=10 # Number of concurrent scrapes
